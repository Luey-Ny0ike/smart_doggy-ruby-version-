<p id="notice"><%= notice %></p>

<h4 class="mimi">Learn how to teach your puppy some basic tricks</h4>

<div class="well">
  <div class="row">
    <div class="col-md-6">
      <% @tricks.each do |trick| %>
      <h4 class="trick_title"><%= trick.title %></h4>
        <div class="img-thumbnail">
          <img src="<%= trick.img1 %>" class="img-responsive" alt="<%= trick.title %>">
        </div>
    </div>
    <div class="col-md-6">
      <table class="table table-condensed">
    <thead>
      <tr>
        <th>Follow this steps</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag "one.png" %> &nbsp;<%= trick.step1 %></td>
      </tr>
      <tr>
        <td><%= image_tag "two.png"%>&nbsp;<%= trick.step2 %></td>
      </tr>
      <tr>
        <td><br>
        <%= link_to 'Show', trick, :class => "btn" %></td>
      </tr>
    </tbody>
  </table>
    </div>
    <% end %>
  </div>
</div>

<br>
<% if can? :manage, User%>
<%= link_to 'New Trick', new_trick_path %>
<% end %>
