<p id="notice"><%= notice %></p>

<h1>Puppies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Color</th>
      <th>Nickname</th>
      <th>Title</th>
      <th>Price</th>
      <th>Recomendation</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puppies.each do |puppy| %>
      <tr>
        <td><%= puppy.name %></td>
        <td><%= puppy.age %></td>
        <td><%= puppy.breed %></td>
        <td><%= puppy.gender %></td>
        <td><%= puppy.color %></td>
        <td><%= puppy.nickname %></td>
        <td><%= puppy.title %></td>
        <td><%= puppy.price %></td>
        <td><%= puppy.recomendation %></td>
        <td><%= puppy.description %></td>
        <td><%= link_to 'Show', puppy %></td>
        <td><%= link_to 'Edit', edit_puppy_path(puppy) %></td>
        <td><%= link_to 'Destroy', puppy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

